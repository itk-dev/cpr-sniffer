{
    "name": "itk-dev/cpr-validator",
    "description": "Danish CPR validation library",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Yde Granath",
            "email": "my@aarhus.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "ItkDev\\CprValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItkDev\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.10"
    },
    "scripts": {
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "psalm": [
            "./vendor/bin/psalm --show-info=true"
        ],
        "check-coding-standards/php-cs-fixer": [
            "php-cs-fixer fix --dry-run --format=checkstyle"
        ],
        "check-coding-standards": [
            "@check-coding-standards/php-cs-fixer"
        ],
        "apply-coding-standards/php-cs-fixer": [
            "php-cs-fixer fix"
        ],
        "apply-coding-standards": [
            "@apply-coding-standards/php-cs-fixer"
        ]
    }
}
